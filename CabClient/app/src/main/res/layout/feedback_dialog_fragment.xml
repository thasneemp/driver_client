<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/white_border_promo"
        android:padding="2dp">


        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:ems="10"
            android:gravity="top"
            android:hint="Please type your comments"
            android:inputType="textMultiLine"
            android:minHeight="200dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText"
            android:background="#ffffff"
            android:gravity="center"
            android:paddingBottom="4dp"

            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="Thank you for your feedback "
            android:textColor="#000000"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/messageTextView"
            android:background="#d7d5d5" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:background="#ffffff"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="2dp">


        <TextView
            android:id="@+id/buttonTextView"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/promo_button_press"
            android:clickable="true"
            android:gravity="center"
            android:text="SEND"
            android:textColor="#bebdbd"

            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>